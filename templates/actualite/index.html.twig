{% extends 'base.html.twig' %}

{% block title %}
  Hello ActualiteController!
{% endblock %}

{% block body %}
  <link href="/asset/css/actualite.css" rel="stylesheet" />
  <div class="page-presentation">
    <div class="container">
      <div class="row">
        <div class="actualite-1">
          <div class="block-title-actualite">
            <h1 class="title-actualite">Top 5 des actualités du jour</h1>
          </div>
          <div class="block-contain-card">
            {% for actu in top %}
              <div class="card-actu">
                <a href="/actualite/presentation-actualite">
                  <img src="{{ actu.coverImageUrlBySize.md }}" />
                  <div class="card-title">
                    <label class="label-actualite">{{ actu.title }}</label>
                  </div>
                </a>
              </div>
            {% endfor %}
          </div>
        </div>
        <div class="actualite-2">
          <div class="block-title-actualite">
            <h1 class="title-actualite">Les actualités du jour</h1>
          </div>
          <div class="block-contain-card">
            {% for actujour in actujours %}
              <div class="card-actu">
                <img src="{{ actujour.coverImageUrlBySize.md }}" />
                <div class="card-title">
                  <div>
                    <label class="label-actualite">{{ actujour.title }}</label>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
        <div class="actualite-3">
          <div class="block-title-actualite">
            <h1 class="title-actualite">Toutes les actualités du mois</h1>
          </div>
          <div class="block-contain-card">
            {% for allActu in allActus %}
              <div class="card-actu">
                <img src="{{ allActu.coverImageUrlBySize.md }}" />
                <div class="card-title">
                  <div>
                    <label class="label-actualite">{{ allActu.title }}</label>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
