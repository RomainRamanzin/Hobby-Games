{% extends 'base.html.twig' %}

{% block title %}
  HobbyGames | Connexion
{% endblock %}

{% block body %}
  <link href="/asset/css/login.css" rel="stylesheet" />
  <link href="https://fr.allfont.net/allfont.css?fonts=jura-medium" rel="stylesheet" type="text/css" />

  <div class="page-container">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-12">
          <div class="box-image">
            <div class="ascend-div">
              <img class="login-page-image" src="/asset/image/Browser-login.png" alt="" class="img-fluid" />
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-12">
          <div class="ascend-div">
            <div class="block-login">
              <div class="card-form-login">
                {# Parcourir les flash #}
                {% for label, messages in app.flashes %}
                  {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                  {% endfor %}
                {% endfor %}

                {# Afficher le formulaire #}
                {{ form_start(formEmail) }}

                {{ form_row(formEmail.email) }}

                <button type="submit" class="btn btn-primary">Renvoyer le mail de v√©rification</button>

                {{ form_end(formEmail) }}

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
